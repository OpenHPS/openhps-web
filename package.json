  "repository": "https://github.com/OpenHPS/openhps-web.git",
  "bugs": {
    "url": "https://github.com/OpenHPS/openhps-web/issues"
  },
  "homepage": "https://openhps.org",
  "private": true,
  "workspaces": [
    "./modules/*"
  ],
  "scripts": {
    "clean": "shx rm -rf ./dist && shx rm -rf ./docs/out",
    "test": "mocha --config modules/*/test/.mocharc.json",
    "cover": "nyc mocha --config test/.mocharc.json && nyc report --reporter=cobertura",
    "cover:ci": "nyc mocha --config test/.mocharc.json --reporter mocha-junit-reporter && nyc report --reporter=cobertura",
    "lint": "eslint modules/*/src/**"
  },
  "devDependencies": {
    "shx": "^0.3.4",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-deprecation": "^1.3.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsdoc": "^40.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "@babel/cli": "^7.20.7",
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@openhps/core": ">=0.3.55",
    "@types/chai": "^4.3.4",
    "@types/cordova": "11.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.14.0",
    "chai": "^4.3.7",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.8.4",
    "reflect-metadata": "^0.1.13",
    "standard-version": "^9.5.0",
    "ts-node": ">=10.9.1",
    "typedoc": "^0.23.25",
    "typescript": "^4.9.5",
    "webpack": "^5.75.0",
    "webpack-bundle-analyzer": "^4.8.0",
    "webpack-cli": "^5.0.1"
  }
}
